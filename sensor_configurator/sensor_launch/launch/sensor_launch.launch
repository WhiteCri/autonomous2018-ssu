  </node>

 <node pkg="nmea_navsat_driver" type="nmea_serial_driver" name="GPS_Sensor" args="/dev/ttyUSB2 38400"/>
 <node pkg="nmea_navsat_driver" type="GPS_Subscriber" name="GPS_Subscriber"/>
